                    <body name="torso_5" pos="-0.06 0 0">
                        <geom name="torsoGeom_5" pos="0 0 0" axisangle="0 1 0 1.57" size="0.02 0.03" type="capsule" density="100"/>
                        <joint axis="0 0 1" name="body_5" pos="0.03 0.0 0.0" range="-0.3 0.3" type="hinge"/>
