                                <joint axis="0 0 1" name="body_7" pos="0.03 0.0 0.0" range="-0.3 0.3" type="hinge"/>
                                <joint axis="0 1 0" name="bodyupdown_7" pos="0.03 0.0 0.0" range="-0.2 0.2" type="hinge"/>

                                <body name="torso_8" pos="-0.06 0 0">
                                    <geom name="torsoGeom_8" pos="0 0 0" axisangle="0 1 0 1.57" size="0.02 0.03" type="capsule" density="100"/>
                                    <joint axis="0 0 1" name="body_8" pos="0.03 0.0 0.0" range="-0.3 0.3" type="hinge"/>
                                    <joint axis="0 1 0" name="bodyupdown_8" pos="0.03 0.0 0.0" range="-0.2 0.2" type="hinge"/>

                                    <body name="torso_9" pos="-0.06 0 0">
                                        <geom name="torsoGeom_9" pos="0 0 0" axisangle="0 1 0 1.57" size="0.02 0.03" type="capsule" density="100"/>
                                        <joint axis="0 0 1" name="body_9" pos="0.03 0.0 0.0" range="-0.3 0.3" type="hinge"/>
                                        <joint axis="0 1 0" name="bodyupdown_9" pos="0.03 0.0 0.0" range="-0.2 0.2" type="hinge"/>
                                    </body>

                                </body>

                            </body>

                        </body>

                    </body>

                </body>
            </body>
        </body>
      </body>


    </body>
